<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
                android:layout_height="match_parent"
                xmlns:android="http://schemas.android.com/apk/res/android">
    <com.amap.api.maps.MapView
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android">
    </com.amap.api.maps.MapView>
    <Button
        android:id="@+id/btn_coarse_move"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="开始普通移动"
        />
    <Button
        android:id="@+id/btn_pause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="暂停"
        android:layout_toRightOf="@+id/btn_coarse_move"
        />
    <Button
        android:id="@+id/btn_restart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="重启"
        android:layout_toRightOf="@+id/btn_pause"
        />
    <Button
        android:id="@+id/btn_stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="停止"
        android:layout_toRightOf="@+id/btn_restart"
        />
    <Button
        android:id="@+id/btn_smooth_move"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="开始平滑移动"
        android:layout_below="@+id/btn_coarse_move"
        />
    <Button
        android:id="@+id/btn_pause1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="暂停"
        android:layout_toRightOf="@+id/btn_smooth_move"
        android:layout_alignTop="@+id/btn_smooth_move"
        />
    <Button
        android:id="@+id/btn_restart1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="重启"
        android:layout_toRightOf="@+id/btn_pause1"
        android:layout_alignTop="@+id/btn_smooth_move"
        />
    <Button
        android:id="@+id/btn_stop1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="停止"
        android:layout_toRightOf="@+id/btn_restart1"
        android:layout_alignTop="@+id/btn_smooth_move"
        />
</RelativeLayout>